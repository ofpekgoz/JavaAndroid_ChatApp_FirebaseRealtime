<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImageFriends"
                android:layout_width="88dp"
                android:layout_height="89dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/usericon"
                app:civ_border_color="#3E5FAA0B"
                app:civ_border_width="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtKullaniciAdi"
                android:layout_width="124dp"
                android:layout_height="27dp"
                android:layout_marginStart="11dp"
                android:layout_marginTop="16dp"
                android:text="İbrahim"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/profileImageFriends"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtDurum"
                android:layout_width="177dp"
                android:layout_height="67dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="İbrahim"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/profileImageFriends"
                app:layout_constraintTop_toBottomOf="@+id/txtKullaniciAdi" />

            <Button
                android:id="@+id/btnKabulEt"
                android:layout_width="106dp"
                android:layout_height="35dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="12dp"
                android:background="@color/btnkabulet"
                android:text="Kabul Et"
                android:textColor="@color/colorbtntextcolor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnKaldır"
                android:layout_width="106dp"
                android:layout_height="35dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="12dp"
                android:background="@color/btnreddet"
                android:text="Reddet"
                android:textColor="@color/colorbtntextcolor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnKabulEt" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>