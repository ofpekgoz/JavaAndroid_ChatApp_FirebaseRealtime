<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/cardbackground2">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImageFriends"
                android:layout_width="158dp"
                android:layout_height="140dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/usericon"
                app:civ_border_color="#3E5FAA0B"
                app:civ_border_width="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/stateİmage"
                android:layout_width="18dp"
                android:layout_height="13dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="10dp"
                app:civ_border_color="#3E5FAA0B"
                app:civ_border_width="2dp"
                app:layout_constraintBottom_toTopOf="@+id/txtDurum"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txtKullaniciAdi" />

            <TextView
                android:id="@+id/txtKullaniciAdi"
                android:layout_width="147dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Kullancı Adı"
                android:textColor="@color/cardtextcolor"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profileImageFriends" />

            <TextView
                android:id="@+id/txtDurum"
                android:layout_width="194dp"
                android:layout_height="54dp"
                android:layout_marginTop="10dp"
                android:gravity="center|top"
                android:text="Merhaba Dünya"
                android:textColor="@color/cardtextcolor"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtKullaniciAdi" />

            <Button
                android:id="@+id/btnArkadasEkle"
                android:layout_width="130dp"
                android:layout_height="42dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:text="Arkadaş Ekle"
                android:textColor="@color/colorbtntextcolor"
                android:background="@color/btnarkadasekle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtDurum" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>